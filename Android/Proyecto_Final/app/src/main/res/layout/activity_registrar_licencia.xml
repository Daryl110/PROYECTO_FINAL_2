<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Persona.RegistrarLicencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="452dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Licencia de transito"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/txtNLicencia_licencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Numero de licencia"
                            android:inputType="number" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <EditText
                            android:id="@+id/txtFechaExpedicion_licencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Fecha de expedición (Año-Mes-Dia)"
                            android:inputType="date"
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <EditText
                            android:id="@+id/txtFechaVencimiento_licencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Fecha de vencimiento (Año-Mes-Dia)"
                            android:inputType="date"
                            android:textSize="16dp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <EditText
                            android:id="@+id/txtOficina_licnecia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Oficina de transito"
                            android:inputType="textPersonName" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <Spinner
                            android:id="@+id/cbCategoria_licencia"
                            android:layout_width="match_parent"
                            android:layout_height="39dp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/btnGuardar"
                                android:layout_width="127dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="regitrar"
                                android:text="Guardar" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/btnCancelar"
                                android:layout_width="114dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="cancelar"
                                android:text="cancelar" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <Space
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>